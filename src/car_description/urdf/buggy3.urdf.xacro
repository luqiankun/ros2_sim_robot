<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="MR-Buggy3">
    <xacro:macro name="iner">
        <inertia ixx="0.00003331" ixy="0.0" ixz="0.0" iyy="0.0000204" iyz="0.0" izz="0.0000204" />
    </xacro:macro>
    <!-- 底座 -->
    <link name="MR-Buggy3/Base">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="3.0" />
            <inertia ixx="0.054" ixy="0.0" ixz="0.0" iyy="0.252" iyz="0.0" izz="0.252" />
        </inertial>
        <visual>
            <origin xyz="0.1371 0.0 -0.0115" rpy="-0.018 0.0 1.5707" />
            <geometry>
                <mesh filename="package://car_description/meshes/BaseReduced.dae" />
            </geometry>
        </visual>
        <visual>
            <origin xyz="0.1371 0.0 -0.0115" rpy="-0.018 0.0 1.5707" />
            <geometry>
                <mesh filename="package://car_description/meshes/TopReduced.dae" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.09" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.3 0.09 0.16" />
            </geometry>
        </collision>
    </link>
    <!-- ray -->
    <link name="MR-Buggy3/GpuLidar">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.01" />
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001" />
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <sphere radius="0.001" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <sphere radius="0.001" />
            </geometry>
        </collision>
    </link>
    <!-- 右前轮 -->
    <link name="MR-Buggy3/FrontRightWheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.05" />
            <xacro:iner></xacro:iner>
        </inertial>
        <visual name="">
            <origin xyz="0.0 -0.01 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <mesh filename="package://car_description/meshes/Wheel.dae" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.012 0.0" rpy="1.5707 0.0 0.0" />
            <geometry>
                <cylinder radius="0.0365" length="0.03" />
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>1</mu>
                        <mu2>1</mu2>
                        <slip1>1.0</slip1>
                        <slip2>1.0</slip2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </link>
    <!-- 右前轮转向 -->
    <link name="MR-Buggy3/FrontRightWheelSteering">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <sphere radius="0.001" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <sphere radius="0.001" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.005" />
            <inertia ixx="0.0000018" ixy="0.0" ixz="0.0" iyy="0.0000018" iyz="0.0" izz="0.0000018" />
        </inertial>
    </link>
    <!-- 左前轮 -->
    <link name="MR-Buggy3/FrontLeftWheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.05" />
            <xacro:iner></xacro:iner>

        </inertial>
        <visual name="">
            <origin xyz="0.0 0.01 0.0" rpy="0.0 0.0 3.14159" />
            <geometry>
                <mesh filename="package://car_description/meshes/Wheel.dae" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 -0.012 0.0" rpy="1.5707 0.0 0.0" />
            <geometry>
                <cylinder radius="0.0365" length="0.03" />
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>1</mu>
                        <mu2>1</mu2>
                        <slip1>1.0</slip1>
                        <slip2>1.0</slip2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </link>
    <!-- 左前轮转向 -->
    <link name="MR-Buggy3/FrontLeftWheelSteering">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <sphere radius="0.001" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <sphere radius="0.001" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.005" />
            <inertia ixx="0.0000018" ixy="0.0" ixz="0.0" iyy="0.0000018" iyz="0.0" izz="0.0000018" />
        </inertial>
    </link>

    <!-- 右后轮 -->
    <link name="MR-Buggy3/RearRightWheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.05" />
            <xacro:iner></xacro:iner>

        </inertial>
        <visual name="">
            <origin xyz="0.0 -0.01 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <mesh filename="package://car_description/meshes/Wheel.dae" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.012 0.0" rpy="1.5707 0.0 0.0" />
            <geometry>
                <cylinder radius="0.0365" length="0.03" />
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>1000</mu>
                        <mu2>1000</mu2>
                        <slip1>1.0</slip1>
                        <slip2>1.0</slip2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </link>

    <!-- 左后轮 -->
    <link name="MR-Buggy3/RearLeftWheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.05" />
            <xacro:iner></xacro:iner>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.01 0.0" rpy="0.0 0.0 3.14159" />
            <geometry>
                <mesh filename="package://car_description/meshes/Wheel.dae" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 -0.012 0.0" rpy="1.5707 0.0 0.0" />
            <geometry>
                <cylinder radius="0.0365" length="0.03" />
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>1000</mu>
                        <mu2>1000</mu2>
                        <slip1>1.0</slip1>
                        <slip2>1.0</slip2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </link>


    <!-- 右前轮转向关节 -->
    <joint name="MR-Buggy3/FrontRightWheelSteeringJoint" type="revolute">
        <origin xyz="0.112 -0.09 0" rpy="0.0 0.0 0.0" />
        <parent link="MR-Buggy3/Base" />
        <child link="MR-Buggy3/FrontRightWheelSteering" />
        <axis xyz="0.0 0.0 1" />
        <limit lower="-0.6" upper="0.6" effort="250" velocity="1.0" />
        <dynamics damping="20" friction="50" />
    </joint>
    <!-- 右前轮关节 -->
    <joint name="MR-Buggy3/FrontRightWheelJoint" type="continuous">
        <origin xyz="0 0 0" rpy="0.0 0.0 0.0" />
        <parent link="MR-Buggy3/FrontRightWheelSteering" />
        <child link="MR-Buggy3/FrontRightWheel" />
        <axis xyz="0.0 1 0.0" />
        <limit effort="1500" velocity="60.0" />
        <dynamics damping="0.1" friction="0.1" />
        <mimic joint="MR-Buggy3/RearRightWheelJoint" />
    </joint>

    <!-- 右后轮关节 -->
    <joint name="MR-Buggy3/RearRightWheelJoint" type="continuous">
        <origin xyz="-0.112 -0.09 0" rpy="0.0 0.0 0.0" />
        <parent link="MR-Buggy3/Base" />
        <child link="MR-Buggy3/RearRightWheel" />
        <axis xyz="0.0 1 0.0" />
        <limit effort="1500" velocity="60.0" />
        <dynamics damping="20" friction="10" />
    </joint>

    <!-- 左前轮转向关节 -->
    <joint name="MR-Buggy3/FrontLeftWheelSteeringJoint" type="revolute">
        <origin xyz="0.112 0.09 0" rpy="0.0 0.0 0.0" />
        <parent link="MR-Buggy3/Base" />
        <child link="MR-Buggy3/FrontLeftWheelSteering" />
        <axis xyz="0.0 0.0 1" />
        <limit lower="-0.6" upper="0.6" effort="250" velocity="1.0" />
        <dynamics damping="20" friction="50" />

    </joint>
    <!-- 左前轮关节 -->
    <joint name="MR-Buggy3/FrontLeftWheelJoint" type="continuous">
        <origin xyz="0 0 0" rpy="0.0 0.0 0.0" />
        <parent link="MR-Buggy3/FrontLeftWheelSteering" />
        <child link="MR-Buggy3/FrontLeftWheel" />
        <axis xyz="0.0 1 0.0" />
        <limit effort="1500" velocity="60.0" />
        <dynamics damping="0.1" friction="0.1" />
        <mimic joint="MR-Buggy3/RearLeftWheelJoint" />

    </joint>
    <!-- 左后轮关节 -->
    <joint name="MR-Buggy3/RearLeftWheelJoint" type="continuous">
        <origin xyz="-0.112 0.09 0" rpy="0.0 0.0 0.0" />
        <parent link="MR-Buggy3/Base" />
        <child link="MR-Buggy3/RearLeftWheel" />
        <axis xyz="0.0 1 0.0" />
        <limit effort="1500" velocity="60.0" />
        <dynamics damping="20" friction="10" />
    </joint>
    <!-- ray -->
    <joint name="MR-Buggy3/LidarJoint" type="continuous">
        <origin xyz="0.0 0.0 0.27" rpy="0.0 0.0 0.0" />
        <parent link="MR-Buggy3/Base" />
        <child link="MR-Buggy3/GpuLidar" />
        <axis xyz="0.0 0.0 1" />
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0" />
    </joint>
    <!-- ros2_control -->
    <ros2_control name="IgnitionSystem" type="system">
        <hardware>
            <plugin>ign_ros2_control/IgnitionSystem</plugin>
        </hardware>
        <joint name="MR-Buggy3/FrontRightWheelSteeringJoint">
            <command_interface name="position">
                <param name="min">-0.6</param>
                <param name="max">0.6</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
            <state_interface name="effort" />
        </joint>
        <joint name="MR-Buggy3/FrontLeftWheelSteeringJoint">
            <command_interface name="position">
                <param name="min">-0.6</param>
                <param name="max">0.6</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
            <state_interface name="effort" />
        </joint>
        <!-- <joint name="MR-Buggy3/FrontRightWheelJoint">
            <command_interface name="velocity">
                <param name="min">-30</param>
                <param name="max">30</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
            <state_interface name="effort" />
        </joint>
        <joint name="MR-Buggy3/FrontLeftWheelJoint">
            <command_interface name="velocity">
                <param name="min">-30</param>
                <param name="max">30</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
            <state_interface name="effort" />
        </joint> -->
        <joint name="MR-Buggy3/RearLeftWheelJoint">
            <command_interface name="velocity">
                <param name="min">-30</param>
                <param name="max">30</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
            <state_interface name="effort" />
        </joint>
        <joint name="MR-Buggy3/RearRightWheelJoint">
            <command_interface name="velocity">
                <param name="min">-30</param>
                <param name="max">30</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
            <state_interface name="effort" />
        </joint>
        <joint name="MR-Buggy3/LidarJoint">
            <state_interface name="position" />
            <state_interface name="velocity" />
            <state_interface name="effort" />
        </joint>
    </ros2_control>
    <gazebo>
        <!-- Joint state publisher -->
        <plugin filename="ign_ros2_control-system"
            name="ign_ros2_control::IgnitionROS2ControlPlugin">
            <parameters>$(find car_description)/config/car.yaml</parameters>
        </plugin>
        <plugin
            filename="ignition-gazebo-sensors-system"
            name="gz::sim::systems::Sensors">
            <render_engine>ogre2</render_engine>
        </plugin>
    </gazebo>
    <gazebo reference="MR-Buggy3/GpuLidar">
        <sensor name='gpu_lidar' type='gpu_lidar'>
            <always_on>true</always_on>
            <visualize>true</visualize>
            <topic>lidar</topic>
            <update_rate>10</update_rate>
            <gz_frame_id>MR-Buggy3/GpuLidar</gz_frame_id>
            <ray>
                <scan>
                    <horizontal>
                        <samples>3600</samples>
                        <resolution>1</resolution>
                        <min_angle>-2.35619</min_angle>
                        <max_angle>2.35619</max_angle>
                    </horizontal>
                    <vertical>
                        <samples>1</samples>
                        <resolution>0.01</resolution>
                        <min_angle>0</min_angle>
                        <max_angle>0</max_angle>
                    </vertical>
                </scan>
                <range>
                    <min>0.08</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>
                        gaussian
                    </type>
                    <mean>0</mean>
                    <stddev>
                        0.001
                    </stddev>
                </noise>
            </ray>
        </sensor>
    </gazebo>
</robot>